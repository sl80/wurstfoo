<h1>Listing users</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.email %>  </td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
    <% if current_user.friend_with?(user) %>
      <td>(friend) <%= link_to 'cancel friendship', user_unfriend_path(user), method: :put %></td>
    <% else %>
      <td><%= link_to 'make friends', user_befriend_path(user), method: :put %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

